<div class="d-flex">
  <div class="" style="width: 100%; max-width: 600px;">
    <div class="">
      <%= form_with(model: [@company, @employee], local: true) do |form| %>
        <div class="form-group">
          <%= form.label :first_name %>
          <%= form.text_field :fname, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :last_name %>
          <%= form.text_field :lname, class: 'form-control' %>
        </div>
        
        <div class="form-group">
          <%= form.label :email %>
          <%= form.text_field :email, class: 'form-control' %>
        </div>

        <div class="form-group mt-2 text-end">
          <%= form.submit 'Create Employee', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>