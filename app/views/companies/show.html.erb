<div class="container mt-4">
  <div class="text-center mb-4">
    <h1 class="text-primary"><%= @company.name %></h1>
    <h2 class="text-secondary">Users</h2>
    <div class="text-end"><%= link_to 'New User', new_company_user_path(@company), class: "btn btn-primary mb-3" %></div>
  </div>

  <div class="card">
    <div class="card-body">
      <table class="table table-striped table-bordered">
        <thead class="thead-dark">
          <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Reimbursement Claims</th>
            <th class="text-center">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @company.users.each do |user| %>
            <tr>
              <td><%= link_to user.fname, [@company, user], class: "text-primary" %></td>
              <td><%= user.lname %></td>
              <td>
                <%= link_to 'View Claims', company_user_reimbursement_claims_path(@company, user), class: '' %>
              </td>
              <td class="text-center">
                <%= link_to 'Edit', edit_company_user_path(@company, user), class: "btn btn-secondary btn-sm" %>
                <a href="<%= company_user_path(@company, user) %>" class="delete-link btn btn-danger btn-sm ml-2" data-url="<%= company_user_path(@company, user) %>" data-method="delete">Delete</a>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="text-center mt-3">
    <%= link_to 'Back to Companies', companies_path, class: "btn btn-secondary" %>
  </div>
</div>

<script>
  const csrfToken = document.querySelector('meta[name="csrf-token"]').getAttribute('content');

  document.querySelectorAll(".delete-link").forEach(link => {
    link.addEventListener("click", function(event) {
      event.preventDefault();
      const url = link.getAttribute("data-url");

      if (confirm("Are you sure?")) {
        fetch(url, {
          method: 'DELETE',
          headers: {
            'X-CSRF-Token': csrfToken,
            'Accept': 'application/json'
          }
        })
        .then(response => {
           window.location.reload(); // Refresh the page on success
        })
        .catch(() => alert("An error occurred. Please try again."));
      }
    });
  });
</script>
