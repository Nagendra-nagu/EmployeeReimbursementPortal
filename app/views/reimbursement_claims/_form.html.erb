
<div class="card">
  <div class="card-body">
    <%= form_with(model: [@company, @employee, @reimbursement_claim], local: true) do |form| %>
      <div class="form-group">
        <%= form.label :purpose, class: 'form-label' %>
        <%= form.text_field :purpose, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :amount, class: 'form-label' %>
        <%= form.number_field :amount, class: 'form-control', step: '0.01' %>
      </div>

      <div class="form-group">
        <%= form.label :date_of_expenditure, class: 'form-label' %>
        <%= form.date_field :date_of_expenditure, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :receipt, class: 'form-label' %>
        <%= form.file_field :receipt, class: 'form-control' %>
      </div>

      <%= form.submit class: 'btn btn-primary mt-2' %>
      <div class="text-end"> <%= link_to 'Cancel', company_user_reimbursement_claims_path(@company, @employee), class: 'btn btn-secondary' %></div>
    <% end %>
  </div>
</div>
