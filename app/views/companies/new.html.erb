<!-- app/views/companies/new.html.erb -->

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h1 class="card-title">New Company</h1>
        </div>
        <div class="card-body">
          <%= form_with(model: @company, local: true) do |form| %>
            <div class="form-group">
              <%= form.label :name %>
              <%= form.text_field :name, class: 'form-control' %>
            </div>

            <div class="form-group mt-2">
              <%= form.submit 'Create Company', class: 'btn btn-primary' %>
            </div>
          <% end %>
        </div>
        <div class="card-footer text-end">
          <%= link_to 'Back', companies_path, class: 'btn btn-secondary' %>
        </div>
      </div>
    </div>
  </div>
</div>
