<div class="">
  <div class="" style="width: 100%; max-width: 600px;">
    <div class="">
      <%= form_with(model: [@company, @employee], local: true) do |form| %>
        <div class="form-group">
          <%= form.label :first_name, class: 'form-label' %>
          <%= form.text_field :fname, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :last_name, class: 'form-label' %>
          <%= form.text_field :lname, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :email %>
          <%= form.text_field :email, class: 'form-control' %>
        </div>

        <div class="form-group text-end mt-2">
          <%= form.submit 'Update Employee', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>