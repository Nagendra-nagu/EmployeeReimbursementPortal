<div class="container mt-4">
  <div class="text-center mb-4">
    <h1 class="display-4 text-primary">Reimbursement Claim Details</h1>
  </div>

  <div class="card shadow-lg border-0 rounded-lg">
    <div class="card-header bg-primary text-white">
      <h3 class="card-title">Claim Information</h3>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-md-6">
          <h4 class="font-weight-bold">Purpose</h4>
          <p class="card-text"><%= @reimbursement_claim.purpose %></p>
        </div>
        <div class="col-md-6">
          <h4 class="font-weight-bold">Amount</h4>
          <p class="card-text"><%= number_to_currency(@reimbursement_claim.amount) %></p>
        </div>
      </div>

      <div class="row mt-3">
        <div class="col-md-6">
          <h4 class="font-weight-bold">Date of Expenditure</h4>
          <p class="card-text"><%= @reimbursement_claim.date_of_expenditure %></p>
        </div>
        <div class="col-md-6">
          <h4 class="font-weight-bold">Receipt</h4>
          <p class="card-text">
            <% if @reimbursement_claim.receipt.attached? %>
              <%= link_to 'View Receipt', rails_blob_path(@reimbursement_claim.receipt, disposition: 'inline'), target: '_blank', class: 'btn btn-info' %>
            <% else %>
              <span class="text-muted">No receipt available</span>
            <% end %>
          </p>
        </div>
      </div>
    </div>
    <div class="card-footer d-flex justify-content-between">
      <%= link_to 'Edit', edit_company_user_reimbursement_claim_path(@company, @employee, @reimbursement_claim), class: 'btn btn-warning mr-2' %>
      <%= link_to 'Back', company_user_reimbursement_claims_path(@company, @employee), class: 'btn btn-secondary' %>
    </div>
  </div>
</div>
