<!DOCTYPE html>
<html>
<head>
  <title>Home</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
</head>
<body>
  <div class="container mt-5">
    <h1 class="text-center mb-4">Welcome to My App</h1>

    <% if current_user %>
      <div class="alert alert-success">
        <h2 class="text-center"><%= current_user.email %></h2>
        <div class="text-center mt-3">
          <%= link_to "Edit Account", edit_user_registration_path, class: 'btn btn-primary' %>
          <%= button_to "Logout", destroy_user_session_path, data: {turbo: "false"}, method: :delete, class: 'btn btn-danger ml-2' %>
        </div>
      </div>
    <% else %>
      <div class="text-center">
        <%= link_to "Login", new_user_session_path, class: 'btn btn-primary mr-2' %>
      </div>
    <% end %>
  </div>
</body>
</html>
