<div class="container mt-4">
  <h1 class='text-primary text-center mb-4'>New Employee</h1>

  <div class="d-flex justify-content-center">
    <div class="card" style="width: 100%; max-width: 600px;">
      <div class="card-body">
        <%= form_with(model: [@company, @employee], local: true) do |form| %>
          <div class="form-group">
            <%= form.label :first_name %>
            <%= form.text_field :first_name, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :last_name %>
            <%= form.text_field :last_name, class: 'form-control' %>
          </div>

          <div class="form-group mt-2">
            <%= form.submit 'Create Employee', class: 'btn btn-primary' %>
          </div>
        <% end %>

        <div class="text-end"><%= link_to 'Back', company_path(@company), class: 'btn btn-secondary' %></div>
      </div>
    </div>
  </div>
</div>
